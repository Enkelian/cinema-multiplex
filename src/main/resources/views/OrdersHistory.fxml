<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/ListView.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="agh.alleviation.presentation.controller.OrdersHistoryController">
    <center>
        <TableView fx:id="ordersTable" prefHeight="400.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="dateColumn" editable="false" prefWidth="75.0" styleClass="tableColumn" text="Date"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="395.0" prefWidth="124.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="showDetails" mnemonicParsing="false" onAction="#showDetailsAction" prefHeight="28.0"
                        prefWidth="100.0" styleClass="addButton" text="Show details" textAlignment="CENTER">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>


