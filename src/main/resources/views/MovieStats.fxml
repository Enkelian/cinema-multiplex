<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="agh.alleviation.presentation.controller.stats.MovieStatsController" stylesheets="@../styles/Stats.css">
    <center>
        <TableView fx:id="itemTable" prefHeight="400.0" prefWidth="522.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameColumn" editable="false" prefWidth="113.0" styleClass="tableColumn" text="Name" />
                <TableColumn fx:id="genreColumn" editable="false" prefWidth="88.0" styleClass="tableColumn" text="Genre" />
                <TableColumn fx:id="descriptionColumn" editable="false" prefWidth="88.0" styleClass="tableColumn" text="Description" />
                <TableColumn fx:id="directorColumn" editable="false" prefWidth="70.0" styleClass="tableColumn" text="Director" />
                <TableColumn fx:id="actorsColumn" editable="false" prefWidth="75.0" styleClass="tableColumn" text="Actors" />
                <TableColumn fx:id="ratingColumn" prefWidth="75.0" styleClass="tableColumn" text="Rating" />
                <TableColumn fx:id="ticketsColumn" prefWidth="75.0" styleClass="tableColumn" text="Tickets bought" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox alignment="BOTTOM_CENTER" prefHeight="382.0" prefWidth="75.0" BorderPane.alignment="CENTER">
            <Button fx:id="back" mnemonicParsing="false" onAction="#handleBackAction" styleClass="backButton" text="Back" textAlignment="CENTER">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Button>
        </VBox>
    </right>
</BorderPane>
