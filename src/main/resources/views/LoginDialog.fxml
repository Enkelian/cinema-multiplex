<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<BorderPane prefHeight="100.0" prefWidth="275.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.alleviation.controller.access_dialog.LoginDialogController">
<center>
    <GridPane prefHeight="182.0" prefWidth="275.0" BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="118.0" minWidth="10.0" prefWidth="89.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="189.0" minWidth="10.0" prefWidth="186.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <Label text="Login" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <TextField fx:id="loginField" prefHeight="28.0" prefWidth="83.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </TextField>

        <Label text="Password" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </PasswordField>

        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" text="Login"
                GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="3"/>

    </GridPane>
</center>
</BorderPane>
