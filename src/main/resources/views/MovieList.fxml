<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.alleviation.controller.list.MovieListController">
    <center>
        <TableView fx:id="itemTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="genreColumn" prefWidth="75.0" text="Genre" />
                <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="Description" />
                <TableColumn fx:id="directorColumn" prefWidth="75.0" text="Director" />
                <TableColumn fx:id="actorsColumn" prefWidth="75.0" text="Actors" />
            </columns>
        </TableView>
    </center>
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addMovie" mnemonicParsing="false" onAction="#handleAddAction" prefHeight="28.0" prefWidth="100.0" text="Add" textAlignment="CENTER">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </Button>
            <Button fx:id="edit" mnemonicParsing="false" onAction="#handleEditAction" text="Edit" textAlignment="CENTER" />
            <Button fx:id="delete" mnemonicParsing="false" onAction="#handleDeleteAction" text="Remove" textAlignment="CENTER" />
         </children>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
