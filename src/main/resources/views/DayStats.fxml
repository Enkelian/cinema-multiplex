<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="agh.alleviation.presentation.controller.stats.DayStatsController" stylesheets="@../styles/Stats.css"
            prefHeight="400.0" prefWidth="400.0">
    <center>
        <TableView fx:id="itemTable" prefHeight="400.0" prefWidth="522.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="dayColumn" editable="false" prefWidth="113.0" text="Day of week" />
                <TableColumn fx:id="ticketsColumn" prefWidth="75.0" text="Tickets bought" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox alignment="BOTTOM_CENTER" prefHeight="382.0" prefWidth="75.0" BorderPane.alignment="CENTER">
            <Button fx:id="back" mnemonicParsing="false" onAction="#handleBackAction" styleClass="backButton" text="Back" textAlignment="CENTER">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </right>
</BorderPane>
